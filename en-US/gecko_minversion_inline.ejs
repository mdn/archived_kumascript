<%
/* one parameter: Gecko version */
/* get the page language */
var lang = env.locale;

var str = "Requires Gecko " + $0;
 
switch(lang) {
    case 'fr':
        str = "Nécessite Gecko " + $0;
    break;
    case 'ja':
        str = "Gecko " + $0 + " が必要";
    break;
    case 'pl':
        str = "Wymaga Gecko " + $0;
    break;
    case 'pt':
        str = "Requer Gecko " + $0;
    break;
    case 'de':
        str = "Ab Gecko " + $0;
        break;
    case 'es':
        str = "Requiere Gecko " + $0;
    break;
    defaut: break;
}
%>
<span class="inlineIndicator geckoMinVer" title="<%=template('geckoRelease', [$0])%>" style="border: 1px solid rgb(129, 129, 81); background: rgb(255, 255, 225); font-size: x-small; white-space: nowrap; padding: 2px;"><%=str%></span>
