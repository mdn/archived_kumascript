<%
/* Parameters:
    $0 - version of Gecko
    $1 - optional text that will display under the version line
*/

/* get the page language */
var lang = env.locale;

var str = "Gecko " + $0 + " note";

switch(lang) {
  case 'de':
    str = "Hinweis zu Gecko " + $0;
    break;
}
%>

<div class="blockIndicator geckoMinVer standardNote standardNoteBlock">
  <p><%= str %></p>
  <p><%= $1 %></p>
</div>
