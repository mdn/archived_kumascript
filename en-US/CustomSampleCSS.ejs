/* CSS here */

body {
    padding: 0;
    margin: 0;
}

svg:not(:root) {
    display:block;
}


/* Canvas docs, playable samples */
.playable-code {
    height: 90px;
    width: 350px;
    float: left;
    background: #F4F7F8;
    border: none;
    border-left: 6px solid #558ABB;
    padding: 10px 10px 0px;
    color: #4D4E53;
    margin: 0 10px 0;
}

.playable-canvas {
    float: left;
    width: 200px;
    height: 100px;
    border: 1px solid #4D4E53;
    border-radius: 2px;
}
