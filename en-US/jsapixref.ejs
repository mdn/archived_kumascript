<%
// Inserts a link to a JS API's documentation in the JSAPI Reference.
// Appropriate styling is applied.
//
// Parameters:
//
//  $0 - API name

var lang = env.locale;
var api = $0;

if (string.endswith($0, '()')) {
    api = string.remove(api, string.length(api) - 2);
}

var URL = "/" + lang + "/docs/SpiderMonkey/JSAPI_Reference/" + api;
%>
<%- template("xref", [URL, $0]) %>
