<%
// Prepares for doing a Gaia live sample by inserting the CSS needed to make them work.
// Do this before any of your own CSS blocks, so that the inserted CSS is the first CSS
// in your document.
//
// Parameters:
//  $0... - The URLs of the CSS for the UX being demonstrated (optional)
//
%>

<div class="hidden">
<pre class="brush: css">

<%
var cssStr = "";
if ($0) {
    cssStr = "@import url(" + $0 + ");";
}
if ($1) {
    cssStr += "@import url(" + $1 + ");";
}
%>
<%- cssStr %>

@import url(https://developer.mozilla.org/media/fonts.css);

html, body {
  margin: 0;
  padding: 0;
  font-size: 10px;
  height: 100%;
  overflow: hidden;
  background-color: #000;
  background-image: url(https://mdn.mozillademos.org/files/4655/fx_logo_white_backdrop.jpg);
}

body {
  background: none;
}
</pre>
</div>
