<%
/* one parameter: SpiderMonkey version */

/* get the page language */
var lang = env.locale;

var link = '';

/* check if page exists, English for fall back */
if(wiki.pageExists(lang + '/SpiderMonkey/' + $0)) {
  link = web.link(wiki.uri(lang + '/SpiderMonkey/' + $0), 'SpiderMonkey ' + $0);
} else if(wiki.pageExists('en/SpiderMonkey/' + $0)) {
  link = web.link(wiki.uri('en/SpiderMonkey/' + $0), 'SpiderMonkey ' + $0);
} else {
  link = 'SpiderMonkey ' + $0;
}

var str = 'Added in ' + link;

switch(lang) {
  case 'ja':
    str = link + ' の新機能';
    break;
}
%>

<span style="border: 1px solid rgb(129, 129, 81); background-color: rgb(255, 255, 225); 
font-size: 9px; vertical-align: text-top;"><%- str %></span>
