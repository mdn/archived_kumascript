<%
/*
 * first parameter: inline/header/note
 * second parameter: product eg Firefox/Thunderbird/SeaMonkey (Use proper case as will be used directly in content)
 * third parameter: Product version
 * fourth parameter: additional information required for the type specified by the first parameter
 *   note requires the note to display
*/
var lang = env.locale;

var product = $1.trim() + ' ';
var version = $2.replace(/\.0/,'');

var articleName = product + version + " for developers";
var text = "This content covers features introduced in " + web.link(wiki.uri(lang + '/docs/' + articleName), product + version);
var note = product + version + " note";
var newIn = "New in ";

switch(lang){
  case 'de':
    articleName = product + version + " für Entwickler";
    text = "Dieser Artikel umfasst Features die in " + web.link(wiki.uri(lang + '/docs/' + articleName), product + version) + " eingeführt wurden";
    note = "Hinweis zu " + product + version;
    newIn = "Neu in ";
    break;
  case 'es':
    articleName = product + version + " para desarrolladores";
    text = "Este artículo cubre características introducidas en " + web.link(wiki.uri(lang + '/docs/' + articleName), product + version);
    note = "Nota sobre " + product + version;
    newIn = "Nuevo en ";
    break;
  case 'fr':
    articleName = product + version + " pour les développeurs";
    text = "Cet article traite de fonctionnalités introduites dans " + web.link(wiki.uri(lang + '/docs/' + articleName), product + version);
    note = "Note concernant " + product + version;
    newIn = "Nouveau dans ";
    break;
  case 'ja':
    articleName = product + version + " for developers";
    text = "この記事は " + web.link(wiki.uri(lang + '/docs/' + articleName), product + version) + "  の新機能について述べています";
    note = product + version + " における注記";
    break;
  case 'ko':
    articleName = product + version + " for developers";
    text = "이 문서는 " + product + "개발자들을 위한 정보입니다. " + web.link(wiki.uri(lang + '/docs/' + articleName), product + version);
    break;
  case 'pl':
    articleName = product + version + " dla programistów";
    text = "Ten artykuł obejmuje funkcje wprowadzone w " + web.link(wiki.uri(lang + '/docs/' + articleName), product + version);
    note = "Uwaga dotycząca Firefoksa " + version;
    newIn = "Nowość w ";
    break;
  case 'pt':
    articleName = product + version + " para desenvolvedores";
    text = "Este artigo cobre características introduzidas no " + web.link(wiki.uri(lang + '/docs/' + articleName), product + version);
    newIn = "Novidade no ";
    break;
  case 'ru':
    articleName = product + version + " для разработчиков";
    newIn = "Нововведение в ";
    break;
  case 'zh-CN':
    articleName = product + version + " for developers";
    text = "该条目记录了 " + web.link(wiki.uri(lang + '/docs/' + articleName), product + version) + " 引入的新特性";
    break;
  case 'zh-TW':
    articleName = product + version + " 技術文件";
    text = "本文描述 " + web.link(wiki.uri(lang + '/docs/' + articleName), product + version) + " 之後加入的功能。";
    break;
}
 
switch($0) {
  case 'inline':
    %><span class="inlineIndicator standardNote standardNoteInline">
      <%=newIn%>
      <%- web.link(wiki.uri(lang + '/docs/' + articleName), product + version) %>
      </span><%
    break;
  case 'header':
    %><div class="overheadIndicator standardNote standardNoteHeader">
      <p><%-text%></p>
      </div><%
    break;
  case 'note':
    %><div class="blockIndicator standardNote standardNote">
      <p><%- web.link(wiki.uri(lang + '/docs/' + articleName), note) %></p>
      <p style="font-weight:400;"><%-$3%></p>
      </div><%
    break;
}
%>
