<%
/*
  Inserts a link to an HTML element documentation
  Appropriate styling is applied.

  Parameters:
  $0 - Element name
*/
var name = ($0.toString()).toLowerCase();
var lang = env.locale;
var basePath = "/" + lang + "/docs/";
var sectionname = "Element";
var dest = basePath + 'Web/HTML/' + sectionname + '/' + name;
var page = wiki.getPage(dest);
var summary = "";

if (page && page.summary) {
    summary = mdn.escapeQuotes(page.summary);
} else {
    switch(lang) {
        default:
            summary = "This article hasn't been written yet. Please consider contributing!";
            break;
    }
}

switch(lang) {
    case 'es':
        dest = basePath + 'Web/HTML/Elemento/' + name;
        break;
    default:        // Using the old path for now
        dest = basePath + 'Web/HTML/Element/' + name;
        break;
}
if (name.indexOf(" ")==-1) {
%><a href="<%- dest %>" title="<%-summary%>"><code>&lt;<%- name %>&gt;</code></a>
<%
}
else {%>
<a href="<%- dest %>" title="<%-summary%>"><%- name %></code></a>
<%
}
%>
