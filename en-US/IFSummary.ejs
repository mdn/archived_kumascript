
<pre class="script">
/* parameters: path of IDL, parent class, scriptable/not scriptable, last Gecko version changed in, summary */
/* get page language first */

var u = uri.parts(Page.uri);
var lang = string.tolower(u.path[0]);
if (string.contains(lang, "project") || string.contains(lang, "Project")) {
  lang = string.substr(lang, 8);
}
/* fall back to page.language on a user page */
else if (string.StartsWith(lang, "user:")) {
 lang = page.language;
}

var scriptable = "Unknown";
var scriptableLink = "en/Interfaces/About_Scriptable_Interfaces";

switch($2) {
  case "scriptable":
    switch(lang) {
      default:
        scriptable = "Scriptable";
        break;
    }
    scriptable = '<a style="color:#00cc00; font-weight:bold;" href="' + scriptableLink + '">' + scriptable + '</span>';
    break;
  case "not scriptable":
    switch(lang) {
      default:
        scriptable = "Not scriptable";
        break;
    }
    scriptable = '<a style="color:#cc0000; font-weight:bold;">' + scriptable + '</span>';
    break;
}

<div style="border:solid #dddddd 2px; float:left;">
<div style="background:#eeeeee; padding:2px;">(web.html(template.source($0)));<span style="text-align:right; float:right;">(web.html(scriptable));</span></div>
<span style="padding-left:2px; padding-right:2px; padding-top:4px; padding-bottom:4px;">(web.html($4));</span>
<div style="background:#eeeeee; padding:2px;">(web.html("Inherits from: " + template.interface($1)));<span style="text-align:right; float:right;">(web.html("Last changed in Gecko " + $3 + template.geckoRelease($3)));</span></div>
</div>
</pre>
