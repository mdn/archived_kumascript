
<pre class="script">
/* can eventually add code to link to nightlies for a specified browser */
var str = '<em>Nightly build<em>';
var url = '';
switch (string.tolower($0)) {
  case 'firefox':
    url = 'http://nightly.mozilla.org/';
    break;
  case 'firefoxmobile':
    url = 'https://wiki.mozilla.org/Mobile/Platforms/Android%23Download_Fennec_Nightly_Builds';
    break;
  case 'safari':
    url = 'http://nightly.webkit.org/';
    break;
  case 'chrome':
    url = 'http://build.chromium.org/f/chromium/snapshots/';
    break;
}
if (string.length(url)) {
  str = web.link(url, str);
}
web.text(str);
