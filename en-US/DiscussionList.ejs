  case 'zh-cn':
    mailingList = " 邮件列表";
    newsgroup = " 新闻组";
    googleGroup = " Google Group（中文）";
    webFeed = " Web feed";
    break;
}

<ul>
  <li>web.link('https://lists.mozilla.org/listinfo/' + $0, mailinglist)</li>
  <li>web.link('news://news.mozilla.org/' + $1, newsgroup)</li>
  <li>web.link('http://groups.google.com/group/' + $1, googleGroup)</li>
